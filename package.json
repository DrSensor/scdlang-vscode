{
    "name": "scdlang",
    "displayName": "Scdlang Language Support",
    "description": "Syntax highlighting for the Scdlang domain specific language",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.37",
        "deno": "^0.16",
        "node": "^12"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "scdlang",
                "aliases": [
                    "Scdlang",
                    "scdlang"
                ],
                "extensions": [
                    ".scl",
                    ".scdl",
                    ".fsm",
                    ".hfsm",
                    ".statecharts"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scdlang",
                "scopeName": "source.scdlang",
                "path": "./dist/Scdlang.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "2",
        "@typescript-eslint/parser": "2",
        "eslint": "6",
        "plist": "3",
        "typescript": "3.5"
    }
}
